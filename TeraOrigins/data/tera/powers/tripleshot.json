{   
	"name": "Triple Shot",
    "description": "You shoot additional arrows while sneaking.",
	"type": "origins:multiple",
	"shoot": {
		"type": "origins:fire_projectile",
		"entity_type": "minecraft:arrow",
		"cooldown": 5,
		"count": 2,
		"divergence": 2,
		"speed": 3,
		"hud_render": {
			"should_render": false
		},
		"tag": "{pickup:0b}",
		"key": {
			"key": "key.sneak",
			"continuous": true
		},
		"condition": {
			"type": "origins:scoreboard",
			"objective": "shot",
			"comparison": "!=",
			"compare_to": 0
		}
	},
	"reset": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:execute_command",
			"command": "scoreboard players set @s shot 0",
			"permission_level": 4
		},
		"interval": 5
	}
}